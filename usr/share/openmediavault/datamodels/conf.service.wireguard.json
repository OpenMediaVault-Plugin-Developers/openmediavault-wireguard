{
  "type": "config",
  "id": "conf.service.wireguard",
  "title": "wireguard",
  "queryinfo": {
    "xpath": "//services/wireguard",
    "iterable": false
  },
  "properties": {
    "tunnels": {
      "type": "object",
      "properties": {
        "tunnel": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "enable": {
                "type": "boolean",
                "default": false
              },
              "tunnelnum": {
                "type": "integer",
                "minimum": 1,
                "maximum": 255
              },
              "tunnelname": {
                "type": "string"
              },
              "nic": {
                "type": "string"
              },
              "endpoint": {
                "type": "string"
              },
              "localserver": {
                "type": "string"
              },
              "port": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535,
                "default": 51820
              },
              "persistent": {
                "type": "integer",
                "minimum": 0,
                "maximum": 3600
              },
              "mtu": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9999
              },
              "iptables": {
                "type": "boolean",
                "default": true
              },
              "privatekeyserver": {
                "type": "string"
              },
              "publickeyserver": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "clients": {
      "type": "object",
      "properties": {
        "client": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "enable": {
                "type": "boolean",
                "default": false
              },
              "clientnum": {
                "type": "integer",
                "minimum": 1,
                "maximum": 253
              },
              "tunnelnum": {
                "type": "integer",
                "minimum": 1,
                "maximum": 255
              },
              "clientname": {
                "type": "string"
              },
              "restrict": {
                "type": "boolean",
                "default": false
              },
              "localip": {
                "type": "boolean",
                "default": false
              },
              "persistent": {
                "type": "integer",
                "minimum": 0,
                "maximum": 3600
              },
              "privatekeyclient": {
                "type": "string"
              },
              "publickeyclient": {
                "type": "string"
              },
              "presharedkeyclient": {
                "type": "string"
              },
              "dns": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "customs": {
      "type": "object",
      "properties": {
        "custom": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uuid": {
                "type": "string",
                "format": "uuidv4"
              },
              "enable": {
                "type": "boolean",
                "default": false
              },
              "name": {
                "type": "string"
              },
              "customcfg": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
